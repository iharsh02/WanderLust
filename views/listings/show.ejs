<% layout("/layouts/boilerplate") %>

    <script>
        const mapToken = "<%= process.env.MAP_TOKEN %>";
        const listing = <%- JSON.stringify(listing) %>;
    </script>

    <div class="row">
        <div class="col-8 offset-2">
            <h3 class="card-title mb-3">
                <%= listing.title %>

            </h3>
        </div>
        <div class="card col-6 offset-2 listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img">
            <div class="card-body mb-3">
                <p class="card-text">
                    Owned by:-
                    <i>
                        <%= listing.owner.username %>
                    </i>
                </p>
                <p class="card-text">
                    <%= listing.description %>
                        <p class="card-text">
                            &#8377;<%= listing.price.toLocaleString("en-IN") %>
                        </p>
                        <p class="card-text">
                            <%= listing.location %> ,
                                <%= listing.country %>
                        </p>

            </div>
        </div>

    </div>
    <% if (currUser&& currUser._id.equals(listing.owner._id)) { %>

        <div class="show-btn">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark add-button  offset-2 ">Edit</a>

            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark offset-4">Delete</button>
            </form>
        </div>
        <% } %>


            <div class="col-8 offset-2">
                <h4>Leave a Review</h4>
                <hr />
                <% if(currUser){%>
                    <form action="/listings/<%= listing.id %>/reviews" method="POST" class="needs-validation mb-3 mt-3"
                        novalidate>
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                                checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>

                        <div class="mb-3 mt-3">
                            <label for="comment" class="form-label">Comments</label>
                            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                                required></textarea>
                            <div class="valid-feedback">
                                Looks Good :)
                            </div>
                            <div class="invalid-feedback">
                                Reviews shouldn't be empty!
                            </div>
                        </div>
                        <div class="mb-3 mt-3">
                            <button class="btn btn-outline-dark">submit</button>
                        </div>

                    </form>
                    <% } %>


                        <% if (listing.reviews.length> 0){ %>
                            <p><b>All Reviews</b></p>
                            <div class="row">

                                <% for(review of listing.reviews){ %>
                                    <div class="card col-md-5 ms-3 mb-3">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <%= review.author.username %>
                                            </h5>
                                            <p class="card-text">
                                                <%= review.comment %>
                                            </p>
                                            <p class="card-text">
                                            <p class="starability-result" data-rating="<%= review.rating %>">
                                                Rated: 3 stars
                                            </p>
                                            </p>
                                        </div>
                                        <form class="mb-3" method="POST"
                                            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                            <button class="btn btn-dark">Delete</button>
                                        </form>
                                    </div>
                                    <%}%>
                                        <% } %>
                                            <div class="col-9 mb-3 ms-3">
                                                <p>
                                                <h2>Where youâ€™ll be</h2>
                                                </p>
                                                <div id="map"></div>
                                            </div>
                            </div>



            </div>


            <script src="/js/map.js"></script>